<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gndsalih.nyaexx.bitkisulama">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.bluetooth" android:required="true" />

    <application
        android:name="gndsalih.nyaexx.bitkisulama.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bitki Sulama"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitkiSulama">

        <activity
            android:name="gndsalih.nyaexx.bitkisulama.SplashActivity"
            android:theme="@style/Theme.BitkiSulama"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="gndsalih.nyaexx.bitkisulama.MainActivity"
            android:theme="@style/Theme.BitkiSulama"
            android:exported="true" />

        <activity
            android:name="gndsalih.nyaexx.bitkisulama.MonitoringActivity"
            android:theme="@style/Theme.BitkiSulama"
            android:exported="true" />

    </application>

</manifest>